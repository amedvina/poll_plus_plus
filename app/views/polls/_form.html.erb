<div class="form-container">
  <%= form_with model: poll do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% poll.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :start_time %><br>
      <%= form.datetime_field :start_time %>
      <% @poll.errors.full_messages_for(:start_time).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div> 

    <div>
      <%= form.label :end_time %><br>
      <%= form.datetime_field :end_time %>
      <% @poll.errors.full_messages_for(:end_time).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>  

    <div>
      <label> Options </label>
      <%= form.fields_for :candidates do |candidate_field| %>
        <%= candidate_field.text_field :title, class: "form-column" %>
      <% end %>
    </div>  

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
